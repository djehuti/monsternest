START:    SCREEN 3    COLOR 6, 1    FMVOL 0, 50    POKE $30C, 4    SYS $FF62    PRINT"ìé              MONSTERNEST"    PRINT"ú              1983 ** COX"    PRINT"ü             INSTRUCTIONS?"    PRINT"ü             £££££££££££££"    PRINT"û               (Y OR N)"    PRINT"";SNY:    GET YN$    IF YN$<>"Y" AND YN$<>"N" THEN GOTO SNY    IF YN$="Y" THEN GOSUB INSTRUCASKSKILL:    PRINT"ìSKILL LEVEL (1-3)? §ù";SSK:    GET SL$ : IF SL$<"1" OR SL$>"3" THEN GOTO SSK    PRINT SL$;"§"    SR=27 - 7*VAL(SL$)SPAWNEGGS:    COLOR 0, 1    CLS    FOR T=1 TO 150CHOOSE:        X=INT(RND(1)*40)        Y=INT(RND(1)*28)+2        IF X=20 AND Y=15 THEN GOTO CHOOSE        L=$B000+256*Y+2*X        IF VPEEK(1,L) <> 32 THEN GOTO CHOOSE        VPOKE 1,L,87 : VPOKE 1,L+1,$19    NEXT T    X=20    Y=15    LOCATE 1, 1    PRINT "   * * * M O N S T E R N E S T * * *"MAINLOOP:    VPOKE 1,$B000+256*Y+2*X, 42    VPOKE 1,$B001+256*Y+2*X, $10    SLEEP 3    X1=X    Y1=Y    J=JOY(1)    FF=J AND $CC0    IF FF <> 0 THEN GOTO FIRE    MD=J AND $00F    IF MD=$8 THEN Y1=Y-1    IF MD=$4 THEN Y1=Y+1    IF MD=$2 THEN X1=X-1    IF MD=$1 THEN X1=X+1    IF X1=X AND Y1=Y THEN GOTO MAINLOOP    VPOKE 1, $B000+256*Y+2*X, 32    IF X1<0 THEN X1=0 : REM GOING OFF SCREEN USED TO MAKE YOU DIE    IF Y1<2 THEN Y1=2 : REM NOW YOU JUST CAN'T GO THERE    IF X1>39 THEN X1=39    IF Y1>29 THEN Y1=29    SL=$B000+2*X1+256*Y1    Q=VPEEK(1,SL)    IF Q=87 THEN GOSUB DIESOUND: X=20: Y=15: GOTO SCOREBOARD    IF Q<>32 THEN P=2:GOSUB DIESOUND    X=X1:Y=Y1:GOTO SCOREBOARDFIRE:    GOSUB DOFIRESCOREBOARD:    PRINT"";:GOSUB PRINTLIVES    PRINT""TAB(19)" SCORE:"SC"ù  "    IF S1>100 THEN S1=0 : GOTO SPAWNEGGS    GOTO MAINLOOPINSTRUC:    PRINT"ìúYOU ARE THE * IN THE MIDDLE OF THE"    PRINT"ûSCREEN.  YOU MOVE AROUND THE SCREEN BY"    PRINT"PUSHING THE JOYSTICK IN THE DIRECTION"    PRINT"YOU WANT TO GO.  YOU MUST DESTROY 100íëùùù§§§"    PRINT"ÅOF THE EGGS (◊) OF THE DRAGON BY PUSHING"    PRINT"THE FIRE BUTTON AND THEN PUSHING THE "    PRINT"öJOYSTICK IN THE DIRECTION OF THE EGG."    PRINT"ñIT WILL EITHER DIE OR HATCH(!)"    PRINT"úIF IT HATCHES, IT WILL SHOOT A STREAM OF§§§§§§§§§§§§§§§"    PRINT"POISONOUS BLOODí IN A RANDOM DIRECTION."    PRINT"ü       HIT  'SPACE'  TO CONTINUE       "SSP:    GET YN$:IF YN$<>" " THEN GOTO SSP    PRINT"ìIF YOU TOUCH THIS POISONOUS BLOODí, OR"    PRINT"úA HATCHED BABY DRAGON, THE GAME WILL"    PRINT"END.  IF YOU TOUCH AN EGG OR GO OFF THE"    PRINT"SCREEN, YOU WILL LOSE ONE LIFE (YOU GET"    PRINT"ûTHREE).  IF YOU SHOOT 100íëùùù§§§ OF THE EGGS,"    PRINT"ÅA NEW SCREENFULL WILL APPEAR."    PRINT"   GOOD  LUCK."    PRINT"  H I T   S P A C E   T O   S T A R T"SYN:    GET YN$:IF YN$<>" " THEN GOTO SYN    RETURNDOFIRE:    FMDRUM 0, 42    XD=0    YD=0    IF FF=$800 THEN XD= 1 : GOTO SHOOT    IF FF=$400 THEN YD=-1 : GOTO SHOOT    IF FF=$080 THEN YD= 1 : GOTO SHOOT    IF FF=$040 THEN XD=-1 : GOTO SHOOT    RETURNSHOOT:    FOR T=1TO SR        IF X+XD*T<0 OR X+XD*T>39 THEN RETURN        IF Y+YD*T<2 OR Y+YD*T>29 THEN RETURN        SL=$B000+2*(X+XD*T)+256*(Y+YD*T)        Q=VPEEK(1,SL)        QC=VPEEK(1,SL+1)        VPOKE 1, SL,46        VPOKE 1, SL+1, $10        SLEEP 3        REM IF Q=87 THEN FOR T1=1 TO 9:POKE 54296,15:POKE 54296,0:NEXT T1        IF Q=87 THEN GOTO KILLEGG        VPOKE 1,SL,Q        VPOKE 1,SL+1,QC    NEXT T    RETURNKILLEGG:    SC=SC+10    S1=S1+1    VPOKE 1, SL,32    VPOKE 1, $B000+2*X+256*Y,42:IF SW=1 THEN SW=0:GOTO HATCH    IF RND(1)<.55 THEN FMDRUM 0, 78: RETURNHATCH:    FMDRUM 0, 74    VPOKE 1, SL, 94: VPOKE 1, SL+ 1, $15    SL=SL-$B000    SX=(SL AND $0FF)/2    SY=(SL AND $7F00)/256PICKDIR:    XD=0:YD=0:XD=INT(RND(1)*3)-1:IF XD<>0 THEN GOTO SQUIRT    YD=INT(RND(1)*3)-1:IF YD=0 THEN GOTO PICKDIRSQUIRT:    FOR T=1 TO 5        IF(SX+XD*T<0)OR(SX+XD*T>39)OR(SY+YD*T<2)OR(SY+YD*T>29)THEN RETURN        IF VPEEK(1,$B000+2*(SX+XD*T)+(YD*T+SY)*256)=42 THEN P=2:GOTO DIESOUND        SL=$B000+2*(SX+XD*T)+(YD*T+SY)*256        REM IF VPEEK(1,SL)=87 THEN FOR T=1 TO 9:POKE54296,15:POKE54296,0:NEXT        IF VPEEK(1,SL)=87 THEN SW=1:GOTO KILLEGG        VPOKE 1,SL,86:VPOKE 1,SL+1,$12        SLEEP 3    NEXT    RETURNYOUDIED:    P=P+1    IF P=3 THEN GOTO ENDGAME    RETURNDIESOUND:    FMDRUM 0, 55    GOTO YOUDIEDPRINTLIVES:    IF P=0 THEN PRINT "***":RETURN    IF P=1 THEN PRINT "** ":RETURN    IF P=2 THEN PRINT "*  ":RETURN    PRINT "   ":RETURNENDGAME:    PRINT "ìYOU GOT KILLED 3 TIMES AND HAD A SCORE"    PRINT "OF";SC;"ù."    PRINT "TO PLAY AGAIN, TYPE THE SPACE BAR.  TO  QUIT, TYPE Q."SPQ:    GET YN$ : IF YN$<>" " AND YN$<>"Q" THEN GOTO SPQ    IF YN$=" " THEN RUN    END